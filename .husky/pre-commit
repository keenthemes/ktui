#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit validation..."

# Run ESLint with TypeScript support
echo "ğŸ“ Checking TypeScript code quality..."
npx eslint 'src/**/*.ts' --max-warnings 100

# Run Prettier formatting check
echo "ğŸ¨ Checking code formatting..."
npx prettier --check 'src/**/*.ts'

# Run TypeScript compilation check
echo "ğŸ”§ Checking TypeScript compilation..."
npx tsc --noEmit --project tsconfig.lib.json

echo "âœ… Pre-commit validation completed successfully!"