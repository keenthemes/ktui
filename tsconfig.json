{
	"compilerOptions": {
		"lib": ["dom", "es2015"],
		"rootDir": "./src",
		"outDir": "./dist/",
		"sourceMap": true,
		"declaration": true,
		"declarationDir": "./lib/esm",
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es5",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleResolution": "node"
	},
	"include": ["src/components"],
	"exclude": ["node_modules", "dist"]
}
